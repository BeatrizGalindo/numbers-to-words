#!/usr/bin/env python3
import sys
import os

# Add the project root to sys.path so that 'src' can be found
project_root = os.path.dirname(os.path.abspath(__file__)) + "/.."
sys.path.append(project_root)

from src.convert import number_to_words  # Import the conversion function



def main():
    # Check for the correct number of arguments
    if len(sys.argv) != 2:
        print("Usage: ./numbers-to-words [number]")
        sys.exit(1)

    try:
        number = int(sys.argv[1])
        if 0 <= number <= 100000:
            print(number_to_words(number))
        else:
            print("Error: Number must be between 0 and 100,000.")
            sys.exit(1)
    except ValueError:
        print("Error: Input must be an integer.")
        sys.exit(1)

if __name__ == "__main__":
    main()
